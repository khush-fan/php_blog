{% extends 'base.twig'%}
{% block body %}
    <div class="container">
        {% if post.image_path is not null %}
        <img src="{{ post.image_path }}" class="img-fluid" alt="{{ post.title|escape }}">
        {% endif %}
        <h2 class="mt-3 mb-3">{{ post.title|escape }}</h2>
        <div class="container">
            <div class="row">
                <span class = "text-muted">Фаниль Хущамов | {{ post.published_date|date("F d, Y") }}</span>
            </div>
        </div>
        <div>
            {{ post.content|raw }}
        </div>
    </div>
    
{% endblock %}